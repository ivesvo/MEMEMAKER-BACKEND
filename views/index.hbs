<div class="body">
  <form action="/upload" method="post" enctype="multipart/form-data">
    Select image to upload:
    <input class="button" type="file" name="fileupload" accept="image/jpg, image/gif, image/png" id="fileUpload" />
    <input class="button" type="submit" value="Upload Image" name="submit" />
  </form>

  {{#if message}}
  <div>
    <h4>
      Successfully Uploaded BRO
    </h4>
  </div>

  {{/if}}
  <div>
    {{#if images}}
    {{#each images}}
    <img src="{{../path}}/{{this.filename}}" alt="{{this.filename}}" />
    {{/each}}
    {{/if}}

  </div>



</div>